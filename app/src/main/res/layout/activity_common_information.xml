<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/include_toolbar"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/White">

        <android.support.design.widget.TabLayout
            android:id="@+id/tlComInf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            style="@style/CommonInformationTabLayout"
            android:background="@color/White"/>
        <!--设置Tab位置及显示模式-->
        <!--app:tabGravity="fill"-->
        <!--app:tabMode="fixed"-->
    </LinearLayout>

    <com.tempus.portal.view.widget.tablayout.SpaceDividerView
        android:layout_width="match_parent"
        android:layout_height="@dimen/sp_1"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@color/transLine"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/vpComInf"
        android:background="@color/personalCenterBg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
