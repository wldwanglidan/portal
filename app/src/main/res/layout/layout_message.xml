<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_bg"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/message_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="5dp"
        android:drawablePadding="30dp"
        android:drawableTop="@drawable/bg_not_wifi"
        android:gravity="center"
        android:textColor="@color/textDarkGrayColor"
        android:textSize="@dimen/small_text"
        android:text="@string/common_error_msg"/>

    <TextView
        android:id="@+id/message_info_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:textColor="@color/textGrayColor"
        android:textSize="@dimen/micro_text"
        android:text="别紧张,试试刷新页面..."/>
    <Button
        android:id="@+id/btnReload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:focusable="false"
        android:background="@drawable/bg_btn_reload"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="11dp"
        android:paddingRight="11dp"
        android:layout_marginTop="45dp"
        android:text="重新加载"
        android:textSize="@dimen/small_text"
        android:textColor="#4e9eee"/>
</LinearLayout>