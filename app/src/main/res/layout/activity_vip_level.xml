<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="@color/base_bg"
    android:gravity="center|top">

    <include
        layout="@layout/include_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="172dp"
        android:background="#8fc5fc"
        android:gravity="bottom|center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/bg_vip">

            <ImageView
                android:id="@+id/ivUserHead"
                android:layout_width="44dp"
                android:layout_height="44dp"
                />

            <TextView
                android:id="@+id/tvVipInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textColor="@color/White"
                android:textSize="@dimen/medium_text"
                android:text="腾邦门户会员T1"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:background="@color/White"
        android:paddingLeft="@dimen/dp_15"
        android:drawablePadding="@dimen/dp_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_16"
        android:paddingBottom="@dimen/dp_16"
        android:text="等级要求"
        android:textSize="@dimen/small_text1"
        android:textColor="@color/textContentColor"
        android:drawableLeft="@drawable/ic_level"
        />
    <View
        android:layout_width="wrap_content"
        android:layout_height="1px"
        android:background="@color/divider"></View>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/bg_vip_advertising"/>
</LinearLayout>