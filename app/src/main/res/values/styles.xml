<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.Base"
        parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowAnimationStyle">@style/SlideRightAnimation
        </item>
        <item name="android:buttonStyle">@android:style/Widget.Button.Small
        </item>
        <!--AlertDialog样式-->
        <item name="android:alertDialogTheme">@style/AlertDialogCustom</item>
        <!--<item name="android:windowBackground">@color/transparent_bg</item>-->
        <!--返回键样式-->
        <item name="drawerArrowStyle">@style/AppTheme.DrawerArrowToggle</item>
    </style>
    <style name="MainTheme" parent="AppTheme">
        <item name="colorPrimary">@color/transparent</item>
        <item name="colorPrimaryDark">@color/transparent</item>
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <style name="fullScreenTheme" >
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="AppThemeTrans"
        parent="AppTheme.Base">
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="colorPrimary">@color/transparent</item>
        <item name="colorPrimaryDark">@color/transparent</item>
    </style>

    <style name="AppTheme"
        parent="AppTheme.Base"/>



    <style name="AppTheme.Launcher"
        parent="@android:style/Theme.NoTitleBar.Fullscreen">
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowBackground">@drawable/start</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AnimBottom"
        parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/bottom_in</item>
        <item name="android:windowExitAnimation">@anim/bottom_out</item>
    </style>
    <style name="AppTheme.DrawerArrowToggle"
        parent="Base.Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/textTitleColor</item>
    </style>

    <style name="AlertDialogCustom"
        parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Toolbar.TitleText"
        parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/big_small_text</item>
        <item name="android:textColor">@color/textTitleColor</item>
    </style>
    <!-- 版本更新 -->
    <style name="DownStyle"
        parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/apk_download_progress
        </item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:minHeight">10dp</item>
    </style>

    <style name="AppTheme.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay"
        parent="ThemeOverlay.AppCompat.Light"/>

    <style name="setting">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <!--<item name="android:paddingTop">16dp</item>-->
        <!--<item name="android:paddingBottom">16dp</item>-->
        <!--<item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>-->
        <!--<item name="android:paddingRight">@dimen/activity_horizontal_margin</item>-->
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:textColor">@color/textTitleColor</item>
    </style>

    <style name="CommonInformationTabLayout"
        parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/textComInfBgColor</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/CommonInformationTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/textComInfBgColor</item>
        <item name="tabIndicatorHeight">2dp</item>
        <!--<item name="tabPaddingStart">12dp</item>-->
        <!--<item name="tabPaddingEnd">12dp</item>-->
        <!--<item name="tabGravity">center</item>-->
        <!--<item name="tabMode">scrollable</item>-->
        <item name="tabGravity">fill</item>
        <item name="tabMode">fixed</item>

    </style>

    <style name="CommonInformationTabTextAppearance"
        parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/textContentColor</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="ThinLine1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/sp_1</item>
        <item name="android:background">@color/transLine</item>
    </style>

    <style name="ThinLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/sp_1</item>
        <item name="android:background">@color/transLine</item>
        <item name="android:layout_marginLeft">@dimen/dp_15</item>
        <item name="android:layout_marginRight">@dimen/dp_15</item>
    </style>

    <style name="FatLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_10</item>
        <item name="android:background">@color/line5</item>
    </style>

    <style name="PllStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingRight">@dimen/dp_15</item>
        <item name="android:paddingLeft">@dimen/dp_15</item>
    </style>

    <style name="leftTVStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textContentColor</item>
        <item name="android:textSize">@dimen/personal_center_textSize</item>
    </style>

    <style name="cetEnglishNameStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@null</item>
        <item name="android:inputType">textUri|textMultiLine</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:digits">
            qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM
        </item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/textTitleColor</item>
        <item name="android:textColorHint">@color/textGrayColor</item>
        <item name="android:textSize">@dimen/personal_center_textSize</item>
    </style>

    <style name="whiteLiStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/White</item>
    </style>

    <style name="addInfBtnStyle">
        <item name="android:background">@drawable/btn_addinfo_shape</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textComInfBgColor</item>
        <item name="android:textSize">@dimen/big_small_text</item>
        <item name="android:paddingLeft">@dimen/dp_16</item>
        <item name="android:paddingRight">@dimen/dp_16</item>
        <item name="android:paddingTop">@dimen/dp_8</item>
        <item name="android:paddingBottom">@dimen/dp_8</item>
        <item name="android:layout_marginTop">@dimen/dp_20</item>
        <item name="android:layout_marginBottom">@dimen/dp_20</item>
    </style>

    <style name="ChooseTvStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center|left</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:drawableRight">@drawable/ic_more</item>
        <item name="android:background">@null</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/textNickNameColor</item>
        <item name="android:textColorHint">@color/transHintTextColor</item>
        <item name="android:textSize">@dimen/personal_center_textSize</item>
    </style>
    <!--<item name="android:textColor">@color/textNickNameColor</item>-->
    <!--<item name="android:textColorHint">@color/transHintTextColor</item>-->

    <style name="bottomRlStyle">
        <item name="android:layout_marginTop">@dimen/dp_20</item>
        <item name="android:layout_marginBottom">@dimen/dp_20</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingRight">@dimen/dp_15</item>
        <item name="android:paddingLeft">@dimen/dp_15</item>
    </style>

    <style name="bottomTvStyle">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textRightColor</item>
        <item name="android:textSize">@dimen/personal_center_textSize</item>
    </style>

    <style name="bottomCbStyle">
        <item name="android:layout_marginTop">@dimen/dp_1</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@drawable/cb_select_cancel_collection</item>
        <item name="android:layout_marginRight">@dimen/dp_4</item>
    </style>

    <style name="mobileCetStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@null</item>
        <item name="android:inputType">phone</item>
        <item name="android:maxLength">11</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/textTitleColor</item>
        <item name="android:textColorHint">@color/textGrayColor</item>
        <item name="android:textSize">@dimen/personal_center_textSize</item>
    </style>

    <style name="nameCetStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@null</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:maxLength">25</item>
        <item name="android:inputType">textPersonName</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/textTitleColor</item>
        <item name="android:textColorHint">@color/textGrayColor</item>
        <item name="android:textSize">@dimen/personal_center_textSize</item>
    </style>

    <style name="sexCbStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/dp_5</item>
        <item name="android:textColor">@drawable/cb_text_select_sex</item>
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:layout_marginRight">@dimen/dp_45</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
